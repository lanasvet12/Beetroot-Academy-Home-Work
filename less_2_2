    <script>
    function sum(a) {

  return function(b) {
    return a + b; // берёт &quot;a&quot; из внешнего лексического окружения
  };

}

alert( sum(3)(1) ); // 4
alert( sum(7)(-1) ); // 6
      
    </script>
