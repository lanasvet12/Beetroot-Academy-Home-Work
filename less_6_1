      <form>
        <div class="field">
          <label for="url">URL для запроса</label><br>
          <input type="text" value="" id="url" name="url" placeholder="Введите URL" />
        </div>
        <div class="group">
          <div class="field">
            <label for="method">Метод</label><br>
            <select id="method">
              <option value="POST">POST</option>
              <option value="GET">GET</option>
              <option value="PUT">PUT</option>
              <option value="OPTIONS">OPTIONS</option>
            </select>
          </div>
          <div class="field">
            <label for="mode">CORS mode</label><br>
            <select id="mode">
              <option value="no-cors">'no-cors' игнорируем cors</option>
              <option value="cors">'cors' кроссдомен по умолчанию</option>
              <option value="same-origin">'same-origin' только на свой домен</option>
            </select>
          </div>
        </div>
        <div class="field">
          <label for="reqhead">Заголовки запроса</label><br>
          <textarea rows="5" cols="30" id="reqhead">{
  "Accept": "application/json",
  "Content-Type": "application/json"
}</textarea>
        </div>
        <div class="field">
          <label for="reqbody">Тело запроса</label><br>
          <textarea rows="5" cols="30" id="reqbody">{
  "id": 123456,
  "title": "заголовок"
}</textarea>
        </div>
        <div class="field">
          <button type="button" id="send">Отправить</button>
        </div>
